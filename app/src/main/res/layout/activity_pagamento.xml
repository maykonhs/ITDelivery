<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itdelivery.com.itdelivery.PagamentoActivity">

    <EditText
        android:id="@+id/etnomecartao"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"/>

    <RadioGroup
        android:id="@+id/rgbandeira"
        android:layout_below="@id/etnomecartao"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MasterCard"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rgcreditodebito"
        android:layout_below="@id/rgbandeira"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Débito"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crédito"/>
    </RadioGroup>

    <EditText
        android:id="@+id/etnumerocartao"
        android:layout_below="@id/rgcreditodebito"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Número do Cartão"/>

    <Button
        android:id="@+id/btfinalizarpagamento"
        android:layout_below="@id/etnumerocartao"
        android:layout_marginTop="50dp"
        android:text="Finalizar Pagamento"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
